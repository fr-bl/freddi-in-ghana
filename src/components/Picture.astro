---
import { Picture as AstroPicture, inferRemoteSize } from "astro:assets";
import type { Props as AstroPictureProps } from "astro/components/Picture.astro";

export type Props = AstroPictureProps;

let { widths = [], class: className, "class:list": classList, formats, ...props } = Astro.props;

const width = typeof props.width === "string"
  ? parseInt(props.width)
  : props.width ?? (await inferRemoteSize(props.src as string)).width;
formats ??= ["avif", "webp"];
---

<AstroPicture widths={[...widths, width, 300]} class:list={["picture", className, classList]} formats={formats} {...props} />

<style>
  .picture {
    background-color: rgb(var(--color-background-yellow));
    border: solid rgb(var(--color-border-yellow)) var(--width-border);
    border-radius: var(--radius-layout);
    width: 100%;
    height: auto;
  }

  @media (max-width: 750px) {
    .picture {
      max-width: 300px;
    }
  }
</style>
