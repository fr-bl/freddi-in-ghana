---
import Action, { type Props as ActionProps } from "@components/Action.astro";
import { translations, type Language } from "@i18n";
import { Icon } from "astro-icon/components";

interface Props extends ActionProps {
  language: Language;
}

const {
  language,
  class: className,
  "class:list": classList,
  ...props
} = Astro.props;
const t = translations[language];
---

<Action
  href={t["donate.href"]}
  class:list={["donate", className, classList]}
  {...props}
>
  <Icon name="eva:heart-fill" />
  <Fragment set:html={t["donate.text"]} />
</Action>

<style>
  @import "@styles/variables.css";

  .donate {
    color: rgb(var(--color-text-donate));
    background-color: rgb(var(--color-background-donate));
    border-style: none;
    font-weight: 600;
  }
</style>
