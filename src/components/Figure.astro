---
import { Image, type ImgAttributes } from "astro:assets";

export interface Props {
  caption: string;
}

const { caption } = Astro.props;
---

<figure class="figure">
  <slot />
  <figcaption class="figure-caption">{caption}</figcaption>
</figure>

<style>
  .figure {
    margin: unset;
    position: relative;
  }

  .figure-caption {
    position: absolute;
    bottom: 1em;
    left: 1.5em;

    color: white;
    text-shadow:
      0 2px 0.1em black,
      0 -2px 0.1em black,
      2px 0 0.1em black,
      -2px 0 0.1em black;
  }
</style>
