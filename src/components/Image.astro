---
import type { LocalImageProps, RemoteImageProps } from "astro:assets";
import { Image as AstroImage } from "astro:assets";

export type Props = LocalImageProps | RemoteImageProps;

const { class: className, "class:list": classList, ...props } = Astro.props;
---

<AstroImage class:list={["image", className, classList]} {...props} />

<style>
  .image {
    background-color: var(--color-background-yellow);
    border: solid rgb(var(--color-border-yellow)) var(--width-border);
    border-radius: var(--radius-layout);
    width: 100%;
    height: auto;
  }

  @media (max-width: 750px) {
    .image {
      max-width: 300px;
    }
  }
</style>
