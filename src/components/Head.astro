---
import { translations, Language } from "@i18n";
import { Font } from "astro:assets";

interface Props {
  language: Language;
  title?: string;
  description?: string;
}

const { language, title, description } = Astro.props;
const t = translations[language];
---

<head>
  <meta charset="utf-8" />
  <title set:text={title ?? t["head.title.text"]} />
  <meta name="description" content={description ?? t["head.title.description"]} />
  <link rel="license" href={t["head.license.href"]} />
  <link rel="author" href={t["head.author.href"]} />

  <link rel="manifest" href="/site.webmanifest" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />

  <Font cssVariable="--font-hanken-grotesk" preload />
</head>
